    <Control.Resources>

    </Control.Resources>
    <!--<Window.Resources>
        <DataTemplate x:Name="AddOrderTemplate" DataType="{x:Type viewmodels:AddOrder}">
            <views:AddOrder DataContext="{Binding}"/>
        </DataTemplate>
